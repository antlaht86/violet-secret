{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && node -r dotenv/config node_modules/.bin/remix build",
    "deploy": "npm run build && npm run start",
    "dev": "concurrently \"npm run dev:css\" \"node -r dotenv/config node_modules/.bin/remix dev\" ",
    "postinstall": "npm install && remix setup node",
    "start": "node -r dotenv/config node_modules/.bin/remix-serve build",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "build:css": "tailwindcss -o ./app/tailwind.css"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "crypto-js": "^4.1.1",
    "dotenv": "^14.3.2",
    "ioredis": "^4.28.3",
    "node-mailer": "^0.1.1",
    "nodemailer": "^6.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "remix": "^1.1.3",
    "tiny-invariant": "^1.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/crypto-js": "^4.1.0",
    "@types/ioredis": "^4.28.7",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.0.0",
    "tailwindcss": "^3.0.17",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
